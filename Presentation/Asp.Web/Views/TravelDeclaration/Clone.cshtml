        $("#travelToCountryId").on('select2:select', function (e) {
            if ($("#travelToCountryId").val() != "VN") {
                $("div#toProvince").hide();
                $("#travelToIntl").val('');
                $("div#toProvinceTextBox").show();
            } else {
                $("div#toProvince").show();
                $("select#toProvince").prop("disabled", false);
                $("div#toProvinceTextBox").hide();
            }
        });


        $("input#userHomeAddress").prop("readonly", true);
        $("input#userPhone").prop("readonly", true);

        $("#travelProvinceId").prop('disabled', true);
        $("#travelDistrictId").prop('disabled', true);
        $("#travelWardId").prop('disabled', true);
        $("#travelHomeAddress").prop('disabled', true);


    });

</script>
