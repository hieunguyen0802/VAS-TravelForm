@using src.Core
@using src.Web.Common.Models.LogViewModels
@model LogSearchViewModel

@{ ViewData["Title"] = Constants.MainPages.Logs; }
<div class="box box-info">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            <i class="fa fa-exclamation-circle" aria-hidden="true"></i> @ViewBag.Title
        </h1>
        <div class="pull-right">
            <a asp-controller="EmailTemplates" asp-action="Create">
                <input type="button" class="btn btn-primary" value="Create" />
            </a>
        </div>
    </div>
    <div class="box-body">
        <table id="grid" name="grid" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Log Date</th>
                    <th>Action</th>
                    <th>Url</th>
                    <th>Message</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        dataTable = $('#grid').DataTable({
            "ajax": {
                "url": '/Administration/Logs/GetLogs',
                "type": 'GET',
                "datatype": 'json',
                "beforeSend": function (request) {
                    ShowLoadingMessage();
                },
                "complete": function () {
                    HideLoadingMessage();
                }
            },

            "columns": [
                { "data": "Logged" },
                { "data": "Action" },
                { "data": "Referrer" },
                { "data": "Message" },

            ],
            "language": {
                "emptyTable": "no data found."
            },
            "order": [[0, "desc"]],
            "lengthChange": false,
            "pageLength": 20
        });
    });
</script>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}