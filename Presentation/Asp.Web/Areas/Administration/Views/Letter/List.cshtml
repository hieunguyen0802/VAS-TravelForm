@using src.Core
@model IEnumerable<src.Web.Common.Models.InvitationLettersViewModel.InvitationLetterViewModel>;

@{
    ViewBag.Title = Constants.MainPages.InvitationLetter;
}
    <div class="content-header clearfix">
        <h1 class="pull-left">
            <i class="fa fa-paper-plane-o" aria-hidden="true"></i> @ViewBag.Title
        </h1>
        <div class="pull-right">
            <a class="btn btn-success" onclick="ShowPopup('@Url.Action("AddOrEdit","Letter")')">
                <i class="fa fa-plus" aria-hidden="true"></i> Add New
            </a>
        </div>
    </div>
<div class="content">
    <div class="box box-info">
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="box-body">
                <table id="grid" name="grid" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="col-md-2">Title</th>
                            <th class="col-md-1">DateCreated</th>
                            <th class="col-md-2">CreateBy</th>
                            <th class="col-md-2">Note</th>
                            <th class="col-md-1">Status</th>
                            <th class="col-md-1"></th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- /.box-body -->
            <!-- /.box-footer -->
        </form>
    </div>
    <div class="modal modal-primary fade" id="modalDefault">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var popup, dataTable;
    var entity = 'Letter';
    var apiurl = '/api/' + entity;

    function ShowPopup(url) {
        var modalId = 'modalDefault';
        var modalPlaceholder = $('#' + modalId + ' .modal-dialog .modal-content');
        $.get(url)
            .done(function (response) {
                modalPlaceholder.html(response);
                popup = $('#' + modalId + '').modal({
                    keyboard: false,
                    backdrop: 'static'
                });
            });
    }
    function SubmitAddEdit(form) {
        $.validator.unobtrusive.parse(form);
        if ($(form).valid()) {
            var data = $(form).serializeJSON();
            data = JSON.stringify(data);
            $.ajax({
                type: 'POST',
                url: apiurl,
                data: data,
                dataType: "json",
                contentType: 'application/json',
                beforeSend: function (request) {
                    request.setRequestHeader("RequestVerificationToken", $("[name='__RequestVerificationToken']").val());
                },
                success: function (data) {
                    if (data.success) {
                        popup.modal('hide');
                        ShowMessage(data.message);
                        dataTable.ajax.reload();
                    } else {
                        ShowMessageError(data.message);
                    }
                }
            });
        }
        return false;
    }
</script>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
