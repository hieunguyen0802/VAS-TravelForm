@using src.Core
@model src.Web.Common.Models.EmailTemplateViewModels.EmailTemplateViewModel
@{
    ViewBag.Title = Constants.MainPages.EmailTemplateEdit;
}
<form asp-controller="EmailTemplates" asp-action="Create" id="create-update-form" autocomplete="off" method="post" role="form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            <i class="fa fa-user" aria-hidden="true"></i> @ViewBag.Title
            <small><i class="fa fa-arrow-circle-left"></i> @Html.ActionLink("Back to Email Template list", "List")</small>
        </h1>
        <div class="pull-right">
            <button id="submit-button" type="submit" class="btn btn-primary">
                <i class="fa fa-floppy-o" aria-hidden="true"></i> Save
            </button>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
</form>
@await Html.PartialAsync("_SavingScriptPartial", "create-update-form")